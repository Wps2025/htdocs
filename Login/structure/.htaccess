AuthType Basic
AuthName "Área Restrita"
AuthUserFile "C:\xampp\htdocs\projeto_Cadidatos\projeto_Cadidatos\Login\structure\.htpasswd"
Require valid-user

# (Inicia) BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# (Fim)END WordPress

#Bloq.os arquivos de listado

#Options - Indexes

# Bloq.config-Início
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>
# Fechamento.Bloq.config

# Quando houver error 403 p/Mtv-Bloq.config= irá direcionar para página Home
ErrorDocument 403 http://localhost/projeto_Cadidatos/projeto_Cadidatos/Login/home.php

ErrorDocument 404 http://localhost/projeto_Cadidatos/projeto_Cadidatos/Login/home.php





